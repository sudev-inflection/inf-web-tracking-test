                return Math.floor(Math.random() * max);
            }
            function getRandomName() {
                const names = ["Alex", "Sam", "Jamie", "Taylor", "Jordan", "Morgan", "Casey", "Riley", "Drew", "Skyler"];
                return names[getRandomInt(names.length)];
            }

            window.onload = function () {
                var randomId = 'visitor-' + getRandomString(8);
                var firstName = getRandomName();
                var lastName = getRandomName();
                var email = firstName.toLowerCase() + '.' + lastName.toLowerCase() + getRandomInt(1000) + '@example.com';
                pendo.initialize({
                    visitor: {
                        id: randomId,
                        email: email,
                        firstName: firstName,
                        lastName: lastName,
                    },
                    account: {
                        id: 'account-456',
                        accountName: 'ExampleCorp',
                        payingStatus: 'paid',
