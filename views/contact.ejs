<header class="hero">
    <div class="container">
        <h1>Contact Us</h1>
        <p>Get in touch with our team for any questions or support.</p>
    </div>
</header>

<section class="contact">
    <div class="container">
        <div class="contact-grid">
            <div class="contact-info">
                <div class="info-item">
                    <h3>Email</h3>
                    <p>support@trackflow.com</p>
                </div>
                <div class="info-item">
                    <h3>Phone</h3>
                    <p>+1 (555) 123-4567</p>
                </div>
                <div class="info-item">
                    <h3>Office</h3>
                    <p>123 Analytics Street<br>San Francisco, CA 94105</p>
                </div>
            </div>

            <div class="contact-form-container">
                <form class="contact-form" id="contact-form" method="POST" action="/contact">
                    <div class="form-group">
                        <input type="text" name="name" placeholder="Your Name" required>
                    </div>
                    <div class="form-group">
                        <input type="email" name="email" placeholder="Your Email" required>
                    </div>
                    <div class="form-group">
                        <textarea name="message" placeholder="Your Message" rows="5" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Send Message</button>
                </form>
            </div>
        </div>
    </div>
</section>

<% if (typeof success !== 'undefined' && success) { %>
    <div class="alert alert-success">Thank you for contacting us! We have received your message.</div>
<% } %>
<% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-danger"><%= error %></div>
<% } %>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var contactForm = document.getElementById('contact-form');
        if (contactForm) {
            contactForm.onsubmit = function (e) {
                var emailInput = contactForm.querySelector("input[type='email']");
                if (emailInput && window.inflection && typeof window.inflection.identify === 'function') {
                    window.inflection.identify(emailInput.value);
                }
                if (emailInput && window.staging_inflection && typeof window.staging_inflection.identify === 'function') {
                    window.staging_inflection.identify(emailInput.value);
                }
            };
        }
    });
</script>